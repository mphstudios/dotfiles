### OSX specific aliases ###

# BBEdit
alias bb='/usr/local/bin/bbedit'

# Delete .DS_Store files recursively from execution directory
alias delete_ds_store='sudo find . -type f -name .DS_Store -delete'

# Desktop hide/show icons
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"

# Directory Service flush cache
alias flush='sudo dscacheutil -flushcache && sudo killall -HUP mDNSResponder'

# Finder hide/show hidden files
alias showfiles="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hidefiles="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

# iTunes: track who is listening to your music
alias whotunes='lsof -r 2 -n -P -F n -c iTunes -a -i TCP@`hostname`:3689'

# Java
#alias checkstyle='java com.puppycrawl.tools.checkstyle.Main'
#alias findbugs='java -jar $FINDBUGS_HOME/findbugs.jar'
#alias findbugs='$FINDBUGS_HOME/bin/findbugs'

# Merge PDF files
# Usage: `mergepdf -o output.pdf input{1,2,3}.pdf`
alias mergepdf='/System/Library/Automator/Combine\ PDF\ Pages.action/Contents/Resources/join.py'

# Terminal-notifier
alias notify='/usr/local/bin/terminal-notifier'

# Pivotal Tracker
# http://jtushman.github.io/blog/2013/08/15/introducing-pivotal-tools/
alias pt='/usr/local/bin/pivotal_tools'

# Sublime Text
alias st='/usr/local/bin/subl'

# webkit2png
alias w2p='/usr/local/bin/webkit2png'
