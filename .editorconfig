# EditorConfig https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{html,js,jsx,ts}]
indent_size = 2

[*.{java,py}]
indent_size = 4

[*.{rake,rb,ru}]
indent_size = 2
