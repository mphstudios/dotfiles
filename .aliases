# reload shell profile
alias reload='source ~/.bash_profile'

# relative navigation shortcuts
alias .='echo $PWD'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# use interactive mode as a safeguard
alias cp='cp -i'
alias ln='ln -i'
alias mv='mv -i'
alias rm='rm -i'

# fix command
alias fc='fc -s'

# listing shortcuts
alias ll='ls -lhF'
alias lla='ls -alhF'
alias lsd='ls -1d */'
alias lle='ls -alheF'

# grep directory listing
alias lleg='ls -alheF | grep'
alias llg='ls -alhF | grep'

# heads or tails
alias llh='ls -lhF | head'
alias llt='ls -lhF | tail'

# list hidden files
alias ls.='ls -hd .*'
alias ll.='ls -lhd .*'

# always long list directory stack
alias dirs='dirs -v'

# always long list jobs
alias jobs='jobs -l'

# create parent directories as needed
alias mkdir='mkdir -pv'

# pretty print PATH variable
alias path="echo $PATH | tr ':' '\n'"

# grep processes
alias psg='ps aux | grep'

# only show one level by default when running tree command
alias tree='tree -L 1'

# fix unintuitive unix command names
alias unmount='umount'

# output random hexidecimal gradoo
alias gradoo='cat /dev/urandom | hexdump -C | grep "ca fe"'

# Git
if hash hub 2>/dev/null; then alias git='hub'; fi
alias amend='git commit --amend'
alias branch='git branch'
alias checkout='git checkout'
alias commit='git commit'
alias stash='git stash'
alias status='git status'

# Git LFS
alias lfs='git lfs'

# OpenSSL checksums
alias md5='/usr/bin/openssl md5'
alias sha1='/usr/bin/openssl sha -sha1'
alias sha256='/usr/bin/openssl sha -sha256'
alias sha512='/usr/bin/openssl sha -sha512'

# Python
alias py='python'
alias py3='python3'

# SQLite
alias sqlite='sqlite3'


### macOS specific

# Delete .DS_Store files recursively from execution directory
alias delete_ds_store='sudo find . -type f -name .DS_Store -delete'

# flush directory service cache
alias flushdns='sudo dscacheutil -flushcache && killall -HUP mDNSResponder;'

# iTunes: track who is listening to your music
alias whotunes='lsof -r 2 -n -P -F n -c iTunes -a -i TCP@`hostname`:3689'

# Merge PDF files
# Usage: `mergepdf -o output.pdf input{1,2,3}.pdf`
alias mergepdf='/System/Library/Automator/Combine\ PDF\ Pages.action/Contents/Resources/join.py'

# Terminal-notifier
alias notify='/usr/local/bin/terminal-notifier'

# Quick Look
alias qlp='qlmanage -p'
alias qlr='qlmanage -r'

# webkit2png
alias w2p='/usr/local/bin/webkit2png'
