##
# Homebrew formulae for Python
# https://github.com/Homebrew/homebrew-python
#
# The Python 2.x and 3.x libraries installed by this script are not yet well
# supported by pip install due to compiler and dependency issues.
#
# Run `brew bundle --file=./Brewfile-Python` to install the packages listed.
#
##

## Add dependency repositories
tap 'homebrew/dupes'
tap 'homebrew/versions'

## Use the Homebrew Python repository
tap 'homebrew/python'

## Update Python
brew 'python', args: [ 'with-brewed-openssl', 'with-brewed-tk' ]
brew 'python3', args: [ 'with-brewed-openssl', 'with-brewed-tk' ]

## NumPy & SciPy
brew 'numpy', args: [ 'with-openblas', 'with-python3' ]
brew 'scipy', args: [ 'with-openblas', 'with-python3' ]

brew 'pyqt'

## Simple Python Version Management
brew 'pyenv'
brew 'pyenv-virtualenv'
