##
# Export shell variables to environment
##

# Set architecture flags
export ARCHFLAGS="-arch x86_64"

export C_INCLUDE_PATH=/usr/local/include

# Locale
export LC_ALL="en_US.UTF-8"
export LANG="en_US.UTF-8"

# make vim the default editor
export EDITOR="vim"

export GNUTERM='x11'

# set the default visual editor used by other commands
if [ -f /usr/local/bin/subl ]; then
    export VISUAL='/usr/local/bin/subl --new-window'
else
    export VISUAL=$EDITOR
fi

# look for per directory ack! settings
export ACKRC=".ackrc"

# Symlink Homebrew Cask apps to system Applications directory
# https://github.com/phinze/homebrew-cask/blob/master/USAGE.md
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

export NODE_PATH=/usr/local/lib/node_modules

# Set the PostgreSQL database directory
export PGDATA=/usr/local/var/postgres

##
# Java
##
export JAVA_HOME=$(/usr/libexec/java_home)

# give user classpath precedence over default system classpath
export CLASSPATH=$HOME/Library/Java/Extensions:/Library/Java/Extensions:$JUNIT_HOME

# Android application development
export ANDROID_HOME=$HOME/Library/Android/sdk
export ANDROID_PLATFORM_TOOLS=$HOME/Library/Android/sdk/platform-tools

# Ant
export ANT_HOME=/usr/local/bin/ant

# Maven
export M2_HOME=/usr/local/Cellar/maven/3.5.2/libexec
export M2=/usr/local/Cellar/maven/3.5.2/libexec/bin

# Use project local Ruby gems without running `bundle exec foo` or `bin/foo`
export RUBYGEMS_GEMDEPS=-
