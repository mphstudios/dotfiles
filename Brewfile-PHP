##
# Homebrew formulae for PHP
# https://github.com/Homebrew/homebrew-php
#
# Run `brew bundle --file=./Brewfile-PHP` to install the packages listed.
#
##

## Add dependency repositories
tap 'homebrew/dupes'
tap 'homebrew/versions'

## Use Homebrew PHP repository
tap 'homebrew/php'

brew 'php56', args: [ 'with-homebrew-curl', 'with-postgresql', 'with-tidy' ]
brew 'php56-phalcon'
brew 'php56-imagick'
brew 'php56-mongo'
brew 'php56-redis'
brew 'php56-twig'
brew 'php56-xdebug'
brew 'php56-yaml'
brew 'phpunit'
brew 'composer'

## Database web interfaces
brew 'phpmyadmin'
brew 'phppgadmin'
